{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "next/core-web-vitals",
    "google"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "camelcase": [
      "warn",
      {
        "properties": "always"
      }
    ],
    "quotes": ["error", "single"],
    "react/jsx-one-expression-per-line": ["error", { "allow": "single-child" }],
    "eol-last": ["error", "always"],
    "linebreak-style": 0,
    "operator-linebreak": ["error", "before"],
    "max-len": ["error", { "code": 200 }],
    "react/prop-types": "off"
  }
}
